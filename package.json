{
  "name": "speedloaf",
  "version": "0.1.0",
  "scripts": {
    "build": "bun run build:css && bun run build:js",
    "build:js": "bun build ./src/client/main.ts --outdir ./dist/assets",
    "build:css": "bunx @tailwindcss/cli -i ./src/client/style.css -o ./dist/assets/main.css --minify",
    "start": "bun run src/server/main.ts",
    "dev": "bun run dev:css & bun run dev:js & bun run dev:server",
    "dev:js": "bun --watch build ./src/client/main.ts --outdir ./dist/assets",
    "dev:css": "bunx @tailwindcss/cli -i ./src/client/style.css -o ./dist/assets/main.css --watch",
    "dev:server": "bun --watch run src/server/main.ts",
    "commit": "git add --all && git commit",
    "check": "bunx @biomejs/biome@beta check src",
    "prepare": "husky"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@tailwindcss/cli": "^4.1.18",
    "@types/bun": "1.2.21",
    "@types/react": "^19.1.12",
    "@types/react-dom": "19.1.9",
    "daisyui": "^5.5.14",
    "husky": "9.1.7",
    "tailwindcss": "^4.1.18"
  }
}
